.goTop {
  position: fixed;
  width: 50px;
  height: 50px;
  line-height: 50px;
  text-align: center;
  // background-color: rgb(240, 124, 130); // http://zhongguose.com/#xiangyehong
  cursor: pointer;
  z-index: 999;
  bottom: 50px;
  right: 20px;
  border-radius: 50%;
  color: white;
  transform: translateY(100px);
  transition: transform .2s;
  box-shadow:-2px 2px 2px 2px rgba(255,255,255,0.5);
}